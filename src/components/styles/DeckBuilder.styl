@import 'common.styl'

.deck-builder {
  position: relative;
  display: flex;
  flex-direction row;
  height: "calc(100% - %s)" %  $header-height;
}

.deck-builder::after {
  content: "";
  background-image: url('/background_image.jpg');
  opacity: 0.8;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;
}

.deck-builder > div {
 display: flex;
  height: auto;
}